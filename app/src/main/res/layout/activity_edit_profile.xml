                            android:textColor="@color/app_theme"
                            android:textFontWeight="700"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llDeleteAccount"
                        android:layout_width="wrap_content"
