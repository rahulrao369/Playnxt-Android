<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="20dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rect"
        android:layout_marginTop="8dp"
        app:tint="@color/app_theme_black" />

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunitobold"
        android:text="@string/enter_note"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        android:paddingStart="4dp"/>

    <LinearLayout
        android:id="@+id/btnAdsShow"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_edit_text"
        android:orientation="horizontal"
        android:backgroundTint="@color/light_gray">

        <EditText
            android:id="@+id/etNote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:fontFamily="@font/nunitobold"
            android:hint="@string/enter_note_here"
            android:textColorHint="@color/edt_text"
            android:textColor="@color/edt_text"
            android:textFontWeight="700"
            android:textSize="14sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:gravity="start"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnSave"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_create_new"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/app_theme">

        <TextView
            android:id="@+id/tvBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_extra_light"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textFontWeight="300"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>