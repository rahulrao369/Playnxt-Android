<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/top_gray"
    tools:context=".activity.AddCardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/bindingHeader"
            layout="@layout/header_layout" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_home_bottom"
                android:backgroundTint="@color/top_gray"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_edit_text"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/etNameofCard"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/nunito_regular"
                            android:hint="Name of card"
                            android:inputType="text"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/edt_text"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/bg_edit_text"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/etCardNo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/nunito_regular"
                            android:hint="Card No"
                            android:inputType="number"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/edt_text"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_edit_text"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/etExpringDate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/nunito_regular"
                                android:hint="Expring Date"
                                android:inputType="text"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:textColor="@color/white"
                                android:textColorHint="@color/edt_text"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_edit_text"
                            android:orientation="horizontal"
                            android:layout_marginStart="8dp">

                            <EditText
                                android:id="@+id/etCVV"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/nunito_regular"
                                android:hint="CVV"
                                android:inputType="text"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:textColor="@color/white"
                                android:textColorHint="@color/edt_text"
                                android:textSize="14sp" />
                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="60dp">

                        <LinearLayout
                            android:id="@+id/btnPayNow"
                            android:layout_width="140dp"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_button"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/nunitobold"
                                android:gravity="center"
                                android:text="@string/pay_now"
                                android:textColor="@color/white"
                                android:textFontWeight="700"
                                android:textSize="22sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </LinearLayout>


</RelativeLayout>